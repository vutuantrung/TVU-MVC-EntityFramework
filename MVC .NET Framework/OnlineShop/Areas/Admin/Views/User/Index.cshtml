@model IEnumerable<OnlineShop.Models.EF.User>
@{
    ViewBag.Title = "User";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3" style="display: flex; align-items: center; justify-content:space-between;">
        <h6 class="m-0 font-weight-bold text-primary">User Table</h6>
        <a type="button" class="btn btn-primary" href="/Admin/User/Create">Create</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone number</th>
                        <th>Created date</th>
                        <th>Created by</th>
                        <th>Status</th>
                        <th>#</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach( var user in Model )
                    {
                        <tr>
                            <td>@user.UserName</td>
                            <td>@user.Name</td>
                            <td>@user.Email</td>
                            <td>@user.Phone</td>
                            <td>@user.CreatedDate</td>
                            <td>@user.CreatedBy</td>
                            <td>@(user.Status == true ? "Active" : "Inactive")</td>
                            <td>
                                <a href="/Admin/User/Details/@user.ID">Details</a>
                                |
                                <a href="/Admin/User/Edit/@user.ID">Edit</a>
                                |
                                @Html.ActionLink( "Remove", "Delete", new { id = user.ID } )
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section CSSLinks
{
    <!-- Custom styles for this page -->
    <link href="~/Assets/Admin/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">

    <!-- Page level plugins -->
    <script src="~/Assets/Admin/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Assets/Admin/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/Assets/Admin/js/demo/datatables-demo.js"></script>
}